<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/outline_meal_icon">

        <ImageView
            android:id="@+id/mealPicture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/outline_meal_icon"
            app:srcCompat="@drawable/ic_wave">
        </ImageView>

        <RelativeLayout
            android:id="@+id/alpha"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/outline_off_white"
            android:alpha="0.5">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mealNameTextView"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/lucida_handwriting_italic"
                android:gravity="center"
                android:paddingTop="10dp"
                android:shadowColor="#000000"
                android:text="Burtrons's Crazy Pasta"
                android:textColor="@color/off_black"
                android:textSize="16dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="-5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/client_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star2Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/client_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star3Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="-5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/client_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star4Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/client_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star5Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="-5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/client_button">
                    </ImageView>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"/>

                <ImageView
                    android:id="@+id/offeredIcon"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/client_button">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>




