<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/mealPicture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:id="@+id/overlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/off_white"
            android:alpha="0.8"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mealNameTextView"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/lucida_handwriting_italic"
                android:gravity="center"
                android:paddingTop="10dp"
                android:shadowColor="#000000"
                android:text="Burtrons's Crazy Pasta"
                android:textColor="@color/off_black"
                android:textSize="16dp">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="-5dp"
                        android:layout_weight="1"
                        android:src="@drawable/cook_button"
                        app:tint="@color/off_grey">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star2Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="5dp"
                        android:layout_weight="1"
                        app:tint="@color/off_grey"
                        android:src="@drawable/cook_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star3Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="-5dp"
                        android:layout_weight="1"
                        app:tint="@color/off_grey"
                        android:src="@drawable/cook_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star4Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="5dp"
                        android:layout_weight="1"
                        app:tint="@color/off_grey"
                        android:src="@drawable/cook_button">
                    </ImageView>
                    <ImageView
                        android:id="@+id/star5Icon"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:translationY="-5dp"
                        android:layout_weight="1"
                        app:tint="@color/off_grey"
                        android:src="@drawable/cook_button">
                    </ImageView>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"/>

                <ImageView
                    android:id="@+id/offeredIcon"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/offered"
                    app:tint="@color/cook_light">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>